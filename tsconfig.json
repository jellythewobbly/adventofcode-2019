{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "include": ["*/*"],
  "exclude": ["node_modules"]
}
